@import "../../../utils/style/theme.wxss";

.project-des {
  display: flex;
  flex-direction: column;
  width: 95%;
  background: white;
  margin: 20rpx 2.5% 0;
  border-radius: 10rpx;
}

.des-top {
  width: 100%;
  margin-top: 20rpx;
  margin-left: 20rpx;
  display: flex;
  flex-direction: row;
  height: 120rpx;
}

.des-top image {
  width: 100rpx;
  height: 100rpx;
}

.des-top view {
  display: flex;
  flex-direction: column;
  height: 120rpx;
  margin-left: 20rpx;
  color: black;
}
.des-top view text{
    line-height: 50rpx;
  }
  .des-mid{
    width: 95%;
    margin: 0 auto;
  }
  .des-bottom{
    display: flex;
    flex-direction: row;
    width: 95%;
    margin: 20rpx auto;
    height: 80rpx;
  }
  .des-bottom view{
    width: 33.33%;
    height: 80rpx;
    display: flex;
    flex-direction: column;
    text-align: center;
  }
 .des-bottom-mid{
    border-left: solid 1rpx;
    border-right: solid 1rpx;
  }
  .des-bottom view text:last-child{
    color: black;
  }
  .project-mid{
    width: 95%;
    margin: 10rpx 2.5% 10rpx;
    color: black;
    text-align: left;
    font-size: 22rpx;
  }
  .project-task{
    width: 95%;
    margin: 0 2.5%;
  }
  .task-line{
    width: 100%;
    height: 130rpx;
    background: white;
    margin-bottom: 20rpx;
    border-radius: 10rpx;
  }
  .task-line view{
    width: 95%;
    height: 65rpx;
    line-height: 65rpx;
    margin-left: 2.5%;
  }
  .task-line view:last-child{
      position: relative;  
      font-size: 22rpx;
      color: black;
  }
   .task-line view:last-child text:last-child{
     width: 70rpx;
     height: 30rpx;
     line-height: 30rpx;
     font-size: 20rpx;
     text-align: center;
     position: absolute;
     right: 0rpx;
     background: #FA6464;
     color: white;
     bottom: 20rpx;
     border-radius: 7rpx;
   }































